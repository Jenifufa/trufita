    <div class="chatbot-container" id="chatbotContainer">
        <div class="chatbot-header">
            <div class="chatbot-title">Asistente de Motos</div>
            <div class="close-chat" id="closeChat"><i class="fas fa-times"></i></div>
        </div>
        <div class="chat-messages" id="chatMessages">
            <div class="message bot-message">
                ¡Hola! Soy tu asistente virtual de motocicletas. ¿En qué puedo ayudarte hoy?
            </div>
        </div>
        <div class="chat-input-container">
            <input type="text" class="chat-input" id="chatInput" placeholder="Escribe tu pregunta aquí...">
            <button class="send-button" id="sendMessage">
                <i class="fas fa-paper-plane"></i>
            </button>
        </div>
    </div>
    
    <script>
        // Chatbot functionality
        document.addEventListener('DOMContentLoaded', function() {
            const chatIcon = document.getElementById('chatIcon');
            const chatbotContainer = document.getElementById('chatbotContainer');
            const closeChat = document.getElementById('closeChat');
            const chatInput = document.getElementById('chatInput');
            const sendMessage = document.getElementById('sendMessage');
            const chatMessages = document.getElementById('chatMessages');
            
            // Base de conocimiento para el chatbot
            const knowledgeBase = {
                'yamaha': 'La Yamaha YZF-R15 es una excelente moto de entrada con un motor de 155cc que produce 19HP. Tiene un precio de COP 12,500,000.',
                'honda': 'La Honda CBR300R es una deportiva compacta con un motor de 286cc que produce 31HP. Su precio es de COP 14,990,000.',
                'kawasaki': 'La Kawasaki Ninja 400 tiene un motor de 399cc que produce 49HP. Es muy ágil y su precio es de COP 19,500,000.',
                'ktm': 'La KTM RC 390 tiene un motor de 373cc con 43HP. Es conocida por su manejo deportivo y agresivo. Su precio es COP 23,990,000.',
                'suzuki': 'La Suzuki GSX-R600 es una superbike con motor de 599cc y 104HP. Su precio es de COP 39,900,000.',
                'ducati': 'La Ducati Panigale V2 es nuestra moto premium con motor de 955cc y 155HP. Precio: COP 89,900,000.',
                'precio': 'Nuestras motos van desde COP 12,500,000 (Yamaha YZF-R15) hasta COP 89,900,000 (Ducati Panigale V2).',
                'colores': 'Todas nuestras motos están disponibles en múltiples colores. Puedes visitar nuestra tienda para ver todas las opciones.',
                'financiación': 'Ofrecemos planes de financiación desde 12 hasta 60 meses con una tasa desde el 1.2% mensual dependiendo de tu perfil crediticio.',
                'garantía': 'Todas nuestras motos tienen garantía de 2 años o 30,000 km, lo que ocurra primero.',
                'mantenimiento': 'Recomendamos hacer mantenimiento preventivo cada 5,000 km o 6 meses, lo que ocurra primero.',
                'repuestos': 'Contamos con repuestos originales para todas las marcas que vendemos y servicio técnico especializado.',
                'seguros': 'Ofrecemos seguros todo riesgo con cobertura especial para motos deportivas desde COP 180,000 mensuales.',
                'prueba': 'Puedes agendar una prueba de manejo visitando nuestra tienda o llamando al número que aparece en la sección de contacto.'
            };
            
            // Abrir el chatbot
            chatIcon.addEventListener('click', function() {
                chatbotContainer.style.display = 'flex';
                chatIcon.style.display = 'none';
            });
            
            // Cerrar el chatbot
            closeChat.addEventListener('click', function() {
                chatbotContainer.style.display = 'none';
                chatIcon.style.display = 'flex';
            });
            
            // Enviar mensaje al presionar Enter
            chatInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    sendUserMessage();
                }
            });
            
            // Enviar mensaje al hacer clic en el botón
            sendMessage.addEventListener('click', sendUserMessage);
            
            function sendUserMessage() {
                const message = chatInput.value.trim();
                if (message) {
                    // Agregar mensaje del usuario
                    addMessage(message, 'user');
                    chatInput.value = '';
                    
                    // Procesar respuesta
                    setTimeout(() => {
                        const response = getBotResponse(message);
                        addMessage(response, 'bot');
                    }, 500);
                }
            }
            
            function addMessage(message, sender) {
                const messageElement = document.createElement('div');
                messageElement.classList.add('message');
                messageElement.classList.add(sender === 'user' ? 'user-message' : 'bot-message');
                messageElement.textContent = message;
                chatMessages.appendChild(messageElement);
                chatMessages.scrollTop = chatMessages.scrollHeight;
            }
            
            function getBotResponse(message) {
                message = message.toLowerCase();
                
                // Buscar palabras clave en el mensaje
                for (const keyword in knowledgeBase) {
                    if (message.includes(keyword)) {
                        return knowledgeBase[keyword];
                    }
                }
                
            // Respuestas específicas para preguntas comunes
            if (message.includes('hola') || message.includes('buenos días') || message.includes('buenas tardes')) {
                return '¡Hola! ¿En qué puedo ayudarte con nuestras motocicletas deportivas?';
            } else if (message.includes('gracias')) {
                return 'De nada. ¡Estoy aquí para ayudarte! ¿Hay algo más que quieras saber?';
            } else if (message.includes('mejor moto')) {
                return 'La mejor moto depende de tu experiencia y presupuesto. Para principiantes, la Yamaha R15 es excelente. Para motoristas experimentados, la Ducati Panigale V2 ofrece el máximo rendimiento.';
            } else if (message.includes('tienda') || message.includes('ubicación') || message.includes('dirección')) {
                return 'Nuestra tienda principal está ubicada en Av. Calle 100 #15-32, Bogotá. También tenemos sucursales en Medellín, Cali y Barranquilla.';
            } else if (message.includes('pago') || message.includes('tarjeta')) {
                return 'Aceptamos todas las tarjetas de crédito, transferencias bancarias, efectivo y contamos con financiación directa o a través de entidades bancarias.';
            }
                
                // Respuesta por defecto
                return 'No tengo información específica sobre eso. ¿Puedo ayudarte con información sobre nuestras motos, precios, financiación o servicios? También puedes llamarnos al 601-123-4567 para más información.';
            }
            
            // Color de las motos (funcionalidad visual)
            const colorOptions = document.querySelectorAll('.color-option');
            colorOptions.forEach(option => {
                option.addEventListener('click', function() {
                    const bikeCard = this.closest('.bike-card');
                    const bikeImage = bikeCard.querySelector('.bike-image');
                    
                    // Cambiar borde del color seleccionado
                    bikeCard.querySelectorAll('.color-option').forEach(opt => {
                        opt.style.borderColor = '#333';
                    });
                    this.style.borderColor = '#fff';
                    
                    // Un efecto visual simple para simular el cambio de color
                    bikeImage.style.filter = `hue-rotate(${Math.random() * 360}deg)`;
                });
            });
        });
    </script>
</body>
</html>
